<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
  <p>Title: <%= bookmark.movie.title %></p>
  <p>Overview:</p>
  <p><%= bookmark.movie.overview %></p>
  <p>Url: <%= bookmark.movie.poster_url %></p>
  <p>Rating: <%= bookmark.movie.rating %></p>
  <p><%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %></p>
<% end %>

<%= link_to "Go back to list", lists_path, class: "btn btn-primary" %>
<%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
