<h1>My List</h1>

<% @lists.each do |list| %>
<li><%= list.name %></li>
<p><%= link_to "View details", list_path(list), class: "btn btn-primary" %>
<%= link_to "delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %></p>
<% end %>

<%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
